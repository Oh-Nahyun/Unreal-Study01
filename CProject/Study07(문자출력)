    printf("%s\n", arrCh);
    
    return 0;
}

/// [예제] 문자열의 길이 구하기
/// 1. 30자 이내의 문자열을 입력 받고, 문자열의 길이를 출력하는 프로그램을 만들자.
/// 힌트 : 문자열의 끝에는 NULL(0)이 들어간다는 것을 이용해라.
int main()
{
    // 문자열 생성 + 초기화
    char chArr[31] = {};
    printf("30자 이내의 문자열을 입력해주세요 : ");
    scanf("%s", &chArr, sizeof(chArr));
    
    // 문자열의 길이 값 변수
    int length = 0;
    for (int i = 0; chArr[i] != 0; i++)
    {
        length++;
    }
    printf("문자열의 길이 : %d\n", length);
    
    return 0;
}

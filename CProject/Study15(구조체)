/// 중첩 구조체
typedef struct
{
    char Tname[15];
    int Tid;
    int Tage;
    char TphoneNumber[14];
}TeacherData;

typedef struct
{
    char name[15];
    int id;
    int age;
    char phoneNumber[14];
    
    TeacherData teacher;
}StudentData;

int main()
{
    StudentData student;
    TeacherData teacher;
    
    student.teacher.Tage = 40;
    teacher.Tage = 50;
    
    return 0;
}

/// 자기 참조 구조체 (Self Referential Structure)

#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

/*
/// 정렬 : 두 변수의 값 바꾸기
int main()
{
    int a = 5;
    int b = 10;
    int temp = 0;
    
    printf("a : %d\n", a);
    printf("b : %d\n\n", b);
    
    temp = a;
    a = b;
    b = temp;
    
    printf("a : %d\n", a);
    printf("b : %d\n", b);
    
    return 0;
}

/// 버블 정렬 (다수의 수 정렬)
int main()
{
    int arr[] = {9, 17, 5, 6, 124,
                112, 1, 3, 87, 55};
    int temp = 0;
    int length = sizeof(arr) / sizeof(arr[0]);
    int swapNum = 0;    // 교체 횟수
    int num = 0;        // 전체 횟수
    
    // 정렬 전 확인
    printf("정렬 전 : ");
    for (int i = 0; i < length; i++)
    {
        printf("%d ", arr[i]);
    }
    printf("\n");
    
    // 버블 정렬
    for (int i = 0; i < length - 1; i++)
    {
        for (int j = 0; j < length - 1; j++)
        {
            if (arr[j] > arr[j + 1])    // 오름차순
            //if (arr[j] < arr[j + 1])  // 내림차순
            {
                temp = arr[j + 1];
                arr[j + 1] = arr[j];
                arr[j] = temp;
                
                swapNum++;
            }
            num++;
        }
    }
    
    // 정렬 후 확인
    printf("정렬 후 : ");
    for (int i = 0; i < length; i++)
    {
        printf("%d ", arr[i]);
    }
    printf("\n");
    
    printf("Swap 횟수 : %d\n", swapNum);
    printf("전체 횟수 : %d\n", num);
    
    return 0;
}

/// 삽입 정렬 (버블 정렬보다 좋다.)
int main()
{
    int arr[] = {9, 17, 5, 6, 124,
                112, 1, 3, 87, 55};
    int temp = 0;
    int length = sizeof(arr) / sizeof(arr[0]);
    int swapNum = 0;    // 교체 횟수
    int num = 0;        // 전체 횟수
    
    // 정렬 전 확인
    printf("정렬 전 : ");
    for (int i = 0; i < length; i++)
    {
        printf("%d ", arr[i]);
    }
    printf("\n");
    
    // 삽입 정렬
    int j = 0;
    for (int i = 0; i < length - 1; i++)
    {
        temp = arr[i];
        j = i - 1;
        while (j >= 0 && arr[j] > temp)
        {
            arr[j + 1] = arr[j];
            j--;
            
            swapNum++; // 교환 횟수
        }
        arr[j + 1] = temp;
        if (!(j >= 0 && arr[j] > temp)) num++; // 전체 횟수
    }
    
    // 정렬 후 확인
    printf("정렬 후 : ");
    for (int i = 0; i < length; i++)
    {
        printf("%d ", arr[i]);
    }
    printf("\n");
    
    printf("Swap 횟수 : %d\n", swapNum);
    printf("전체 횟수 : %d\n", num);
    
    return 0;
}
 
 /// 그 외 정렬의 종류 : 힙 정렬, 퀵 정렬, 선택 정렬 등
 */

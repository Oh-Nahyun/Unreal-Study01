#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>

/// 메모리의 동적 할당 (Dynamic Allocation)
//void* malloc(size_t size);                  // malloc 함수 원형
//void free(void *memblock);                  // free 함수 원형
//void* calloc(size_t number, size_t size);   // calloc 함수 원형
//void* realloc(void *memblock, size_t size); // realloc 함수 원형

int main()
{
    // int arr2[100] = {};
    
    int SizeOfArray = 0;
    int* arr;
    
    printf("만들고 싶은 배열의 원소의 수 : ");
    scanf("%d", &SizeOfArray);
    
    arr = (int*)malloc(sizeof(int) * SizeOfArray); // int arr2[SizeOfArray] 와 동일한 작업을 한 크기의 배열 생성
    
    free(arr); // 메모리 할당 해제 (생성보다 더 많이 중요하다!!!)
    
    return 0;
}

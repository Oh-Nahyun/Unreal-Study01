/// 두가지 조건 동시에 판별하기
int main()
{
    int num = 0;
    printf("정수를 입력해주세요. : ");
    scanf("%d", &num);
    
    if (num > 10 && num % 2 == 0)
    {
        printf("%d은 10보다 큰 짝수입니다.\n", num);
    }
    else if (num > 10)
    {
        printf("%d은 10보다 큰 홀수입니다.\n", num);
    }
    else if (num % 2 == 0)
    {
        printf("%d은 10보다 작은 짝수입니다.\n", num);
    }
    else
    {
        printf("%d은 10보다 작은 홀수입니다.\n", num);
    }
    
    return 0;
}
